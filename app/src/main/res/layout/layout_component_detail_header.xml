<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="@dimen/pages_padding"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="1000dp"
        app:cardElevation="50dp"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/component_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_image_24" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/component_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/component.todo.list"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="@dimen/pages_padding"
        android:fontFamily="@font/roboto_bold"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="@dimen/pages_padding">

        <TextView
            style="@style/Settings.Cell.Primary.TextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:text="@string/component.detail.enabled" />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/componentEnabledSwitch"
            style="@style/Settings.Switch.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        style="@style/Settings.Divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>