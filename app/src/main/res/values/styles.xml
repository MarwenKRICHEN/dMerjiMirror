<resources>

    <style name="MyButton.Main" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/main_color</item>
        <item name="rippleColor">@color/main_color_tint</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Google.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/dark</item>
        <item name="strokeColor">@color/dark_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/dark_tint</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="MyText.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/main_color</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/main_color_tint</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_radius</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/dark</item>
        <item name="colorError">@color/error</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="editTextStyle">@style/M3uFile.EditText</item>
    </style>

    <style name="M3uFile.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!--    Settings-->

    <style name="Settings.Section.Header.TextStyle" parent="">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:autoSizeMaxTextSize">15sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">@dimen/settings_cell_padding</item>
    </style>

    <style name="Settings.Cell.TextStyle" parent="">
        <item name="android:autoSizeMaxTextSize">15sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/settings_primary_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Settings.Cell.Primary.TextStyle" parent="Settings.Cell.TextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="Settings.Cell.Clickable" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/setting_ripple</item>
    </style>

    <style name="Settings.Divider" parent="">
        <item name="android:layout_height">0.8dp</item>
        <item name="dividerColor">#4DE4E4E4</item>
    </style>

    <style name="Settings.Toggle.Button.Elevated.Button" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:minWidth">0dp</item>
        <item name="rippleColor">@color/main_color</item>
        <item name="backgroundTint">@color/toggle_button_background_tint</item>
        <item name="android:textColor">@color/toggle_button_text_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <style name="Settings.Switch.Button" parent="">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:checked">true</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="trackTint">#E4E4E4</item>
        <item name="thumbTint">@color/switch_thumb</item>
    </style>

    <style name="Settings.Edit.Header.TextButton" parent="MyText.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <!--    Bottom Sheets-->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

</resources>