<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DMerjiMirror" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/error</item>
        <item name="colorPrimaryVariant">@color/error</item>
        <item name="colorOnPrimary">@color/error</item>
        <!--        navigation bar active text color-->
        <item name="colorOnSurface">@color/main_color</item>
        <item name="colorSurface">@color/error</item>
        <!--        navigation bar inactive color-->
        <item name="colorOnSurfaceVariant">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/error</item>
        <item name="colorSecondaryVariant">@color/error</item>
        <item name="colorOnSecondary">@color/error</item>
        <!--        navigation bar active icon color-->
        <item name="colorOnSecondaryContainer">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_medium</item>

    </style>

    <style name="Theme.Authentication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/main_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>