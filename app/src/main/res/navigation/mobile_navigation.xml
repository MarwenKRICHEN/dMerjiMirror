<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_overview">

    <fragment
        android:id="@+id/navigation_overview"
        android:name="com.example.dmerjimirror.ui.overview.OverviewFragment"
        tools:layout="@layout/fragment_overview" />

    <fragment
        android:id="@+id/navigation_components"
        android:name="com.example.dmerjimirror.ui.components.ComponentsFragment"
        android:label="@string/global.components"
        tools:layout="@layout/fragment_components" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.dmerjimirror.ui.settings.SettingsFragment"
        android:label="@string/global.settings"
        tools:layout="@layout/fragment_settings" />
</navigation>